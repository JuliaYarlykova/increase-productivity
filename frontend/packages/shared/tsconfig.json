{
  "extends": "@repo/typescript-config/base.json",
  "Display": "Vite",
  "compilerOptions": {
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "./dist/",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "target": "es5",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
